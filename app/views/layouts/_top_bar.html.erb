<header id="top-bar" class="mdc-top-app-bar mdc-top-app-bar--fixed" data-controller="top-bar">
  <div class="mdc-top-app-bar__row">
    <section class="mdc-top-app-bar__section mdc-top-app-bar__section--align-start h-100">
      <%= link_to "/", class: "h-100" do %>
        <%= image_pack_tag "favicon-96x96.png", alt: "Down Under Sports", class: "img" %>
      <% end %>
    </section>
    <section class="mdc-top-app-bar__section mdc-top-app-bar__section--align-end">
      <span class="mdc-top-app-bar__title" data-target="top-bar.title">
        <%= @title || "Down Under Sports" %>
      </span>
      <button
        id="drawer-toggle-button"
        class="material-icons mdc-top-app-bar__navigation-icon mdc-icon-button edge-even"
        data-target="top-bar.nav-button"
        data-action="app-drawer#toggle"
      >
        menu
      </button>
    </section>
  </div>
</header>
